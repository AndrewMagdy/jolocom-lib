{
    "version": "2.7.1",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "removeComments": true,
        "lib": ["es2015", "es2017"],
        "noLib": false,
        "preserveConstEnums": true,
        "declaration": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./js/",
        "rootDir": "./ts"
    },
    "filesGlob": [
        "./ts/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "exclude": [
        "./tests/**/*"
    ]
}
